<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <RelativeLayout
        android:id="@+id/fragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/navigate_bar_rg">
    </RelativeLayout>
    <RadioGroup
        android:id="@+id/navigate_bar_rg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal">
        <RadioButton
            android:id="@+id/first_rb"
            style="@style/tab_icon"
            android:drawableTop="@drawable/selector_nav_tab_home"
            android:text="第一页" />
        <RadioButton
            android:id="@+id/second_rb"
            style="@style/tab_icon"
            android:drawableTop="@drawable/selector_nav_tab_invest"
            android:text="第二页" />
        <RadioButton
            android:id="@+id/three_rb"
            style="@style/tab_icon"
            android:drawableTop="@drawable/selector_nav_tab_transfer"
            android:text="第三页" />
        <RadioButton
            android:id="@+id/four_rb"
            style="@style/tab_icon"
            android:drawableTop="@drawable/selector_nav_tab_news"
            android:text="第四页" />
    </RadioGroup>
</RelativeLayout>
